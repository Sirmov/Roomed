@using static Roomed.Common.GlobalConstants;

@{
	var reservationModel = ViewData["ReservationInputModel"] as ReservationInputModel;
	ViewData["RoomId"] = Model.Id;
}

@model RoomViewModel

<div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xxl-2">
	<div class="card rounded-lg mb-3">
		<div class="card-header text-dark">
			<b>Room №@Model.Number</b>
		</div>
		<div class="card-body">
			<div class="row">
				<div class="col col-auto mx-auto my-auto">
					<h5>@Model.Type.Name</h5>
					<h6>№@Model.Number</h6>
				</div>
				<div class="col col-auto mx-auto my-auto">
					<partial name="_ChooseRoomFormPartial" model="@reservationModel" view-data="ViewData" />
				</div>
			</div>
		</div>
	</div>
</div>