@using Roomed.Data.Models.Enums;

@using static Roomed.Common.Constants.GlobalConstants;

@model ProfileIconViewModel

@switch (Model.Gender)
{
	case Gender.Male:
		<img class="img rounded border-0" width="@Model.Width" height="@Model.Height" src="@ManImagePath" alt="male">
		break;
	case Gender.Female:
		<img class="img rounded border-0" width="@Model.Width" height="@Model.Height" src="@WomanImagePath" alt="female">
		break;
	default:
		<img class="img rounded border-0" width="@Model.Width" height="@Model.Height" src="@AnonymousImagePath" alt="anonymous">
		break;
}